<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rj.pl.memorypower">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/memorypowericon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/memorypowericon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".NumbersIntro" />
        <activity
            android:name=".NumbersSession"
            android:screenOrientation="portrait" />
        <activity android:name=".WordsIntro" />
        <activity
            android:name=".WordsSession"
            android:screenOrientation="portrait" />
        <activity android:name=".NamesIntro" />
        <activity
            android:name=".NamesSession"
            android:screenOrientation="portrait" />
        <activity android:name=".CardsIntro" />
        <activity
            android:name=".CardsSession"
            android:screenOrientation="portrait" />
        <activity android:name=".Stats" />
        <activity android:name=".Ranking" />
        <activity android:name=".Settings" />
        <activity android:name=".GetPremium" />
    </application>

</manifest>