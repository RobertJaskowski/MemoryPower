<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>


        <item name="android:itemBackground">@color/lightDark</item>


    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    
    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="BackgroundForNumbersGridView" parent="android:Widget.TextView">
        <item name="android:background">@color/colorAccent</item>
    </style>
    
    <style name="searchView" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@color/lightDark</item>

    </style>







</resources>
