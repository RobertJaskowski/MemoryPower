<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rj.pl.memorypower.Stats">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"><!--testing purpose only -->


        <Spinner
            android:id="@+id/statsSpinner"
            android:entries="@array/months"
            android:layout_margin="5dp"
            android:background="@color/lightDark"
            android:popupBackground="@color/lightDark"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"  />


    </LinearLayout>


    <!--<Button-->
        <!--android:onClick="testRecords" android:text="testRecords"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

</RelativeLayout>
