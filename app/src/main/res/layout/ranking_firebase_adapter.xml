<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/firebase_adapter_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:minWidth="30dp"

        />

    <!--<View-->
        <!--android:id="@+id/spliter1"-->
        <!--android:layout_toEndOf="@id/firebase_adapter_text1"-->
        <!--android:layout_alignBottom="@id/firebase_adapter_text1"-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:background="@color/colorPrimary"/>-->

    <TextView
        android:id="@+id/firebase_adapter_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@id/firebase_adapter_position"/>

    <TextView
        android:id="@+id/firebase_adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@id/firebase_adapter_score"/>


    <TextView
        android:id="@+id/firebase_adapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@id/firebase_adapter_time"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gradient_line"
        android:layout_below="@id/firebase_adapter_text"/>


</RelativeLayout>